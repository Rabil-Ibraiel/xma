generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Party {
  id             Int        @id @default(autoincrement())
  arabicName     String
  abbr           String     @unique
  numberOfVoting Int 
  // Maps Prisma name -> existing DB column
  lastElecChairs Int        @map("lastYearChairs")
  thisElecChairs Int        @map("thisYearChairs")
  color          String     // make String? if some rows don't have a color
  locations      Location[]

  @@index([abbr])
}

model Location {
  id             Int     @id @default(autoincrement())
  regionCode     String
  numberOfVoting Int
  partyId        Int
  party          Party   @relation(fields: [partyId], references: [id], onDelete: Cascade)

  // Enforce: at most one row per (party, region)
  @@unique([partyId, regionCode], name: "party_region_unique")
  

  // Helpful for queries
  @@index([partyId])
  @@index([regionCode])
}
