generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Party {
  id             Int        @id @default(autoincrement())
  arabicName     String
  abbr           String     @unique
  numberOfVoting Int
  lastElecChairs Int        @map("lastYearChairs")
  thisElecChairs Int        @map("thisYearChairs")
  color          String
  locations      Location[]

  @@index([abbr])
}

model Location {
  id             Int    @id @default(autoincrement())
  regionCode     String
  numberOfVoting Int
  partyId        Int
  thisElecChairs Int    @default(0)
  party          Party  @relation(fields: [partyId], references: [id], onDelete: Cascade)

  @@unique([partyId, regionCode], name: "party_region_unique")
  @@index([partyId])
  @@index([regionCode])
}
